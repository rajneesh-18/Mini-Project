<h1>Currency Converter</h1>
<div class="converter">
<label for="dollar">Dollar:</label>
<input type="number" id="dollar" placeholder="Enter amount">
<button onclick="convert()">Convert</button>
<p id="result"></p>
</div>
<script>
function convert() {
var dollar = document.getElementById('dollar').value;
var rupees = dollar * 82.61;
document.getElementById('result').innerHTML = 'Rupees:' + rupees.toFixed(2);
}
</script>
